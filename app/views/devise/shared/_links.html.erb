<div class="text-center">
  <% # Verifica se não é a página de login %>
  <% if controller_name != 'sessions' %>
    <%= link_to "Entrar", new_session_path(resource_name) %><br />
  <% end %>

  <% # Verifica se é possível registrar e não é a página de registros %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Cadastre-se", new_registration_path(resource_name) %><br />
  <% end %>

  <% # Verifica se é possível recuperar a senha e não é a página de recuperação de senha ou registros %>
  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
  <% end %>

  <% # Verifica se é possível confirmar a conta e não é a página de confirmação %>
  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name) %><br />
  <% end %>

  <% # Verifica se é possível bloquear a conta, se a estratégia de desbloqueio por e-mail está habilitada e não é a página de desbloqueio %>
  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name) %><br />
  <% end %>

  <% # Verifica se é possível fazer login com provedores de terceiros (ex.: Facebook, Google) %>
  <% if devise_mapping.omniauthable? %>
    <% # Itera sobre todos os provedores de terceiros configurados %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>
