<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Bem vindo(a)!</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.label :email, class: "h6 text-gray-900 mb-4" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password, class: "h6 text-gray-900 mb-4" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-user" %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="form-group ml-4">
                      <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
                      <%= f.label :remember_me, class: "custom-control-label", for: "customCheck" %> 
                    </div>
                  <% end %>

                  <div class="form-group">
                    <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
                  </div>
                <% end %>
                <%= render "devise/shared/links" %>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
